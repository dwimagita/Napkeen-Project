<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.imadedwimagitadirtana_1202150054_si3906.napkeen.LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/napkeenn"
        android:id="@+id/napkeenlogo" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:inputType="text"
        android:hint="Email"
        android:layout_below="@id/napkeenlogo"
        />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:hint="@string/password" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/password"
        android:text="@string/login"
        android:layout_marginTop="15dp"
        android:onClick="Login"
        />
    <TextView
        android:id="@+id/btn_reset_password"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="Lupa Password?"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"
        android:onClick="menujuresetpassword"
        />

    <TextView
        android:id="@+id/textView6"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_reset_password"
        android:text="Belum Punya Akun?"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/daftarlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="menujusignup"
        android:text="Daftar"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        android:textStyle="bold" />


    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/textatau"
        android:layout_alignLeft="@+id/sign_up_button"
        android:layout_alignStart="@+id/sign_up_button"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/garisataukiri"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/garisataukanan"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_above="@+id/garisataukiri"
        android:layout_alignEnd="@+id/btn_login"
        android:layout_alignRight="@+id/btn_login"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textatau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daftarlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Atau" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:ems="25"
        android:text="@string/kebijakansignup"
        android:textAlignment="center"
        android:textSize="8sp" />


    <com.google.android.gms.common.SignInButton

        android:id="@+id/gg_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textatau"
        />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView8"
        android:layout_gravity="center|bottom"

        android:visibility="gone" />

</RelativeLayout>
