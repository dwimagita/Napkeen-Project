<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.imadedwimagitadirtana_1202150054_si3906.napkeen.detail_restoran">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_below="@id/lokasi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="cursive"
            android:text="Ayam Geprek"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="38dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView16"
            android:layout_centerHorizontal="true"
            android:text="Jl. Sukabirus No. 11"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView19"
            android:layout_alignBottom="@+id/textView19"
            android:layout_alignLeft="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:text="Buka"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/textView18"
            android:layout_toRightOf="@+id/textView18"
            android:text="9 Pagi - 10 Malam" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView18"
            android:layout_alignStart="@+id/textView18"
            android:layout_below="@+id/textView18"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/ic_call_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView4"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_menu_camera"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView19"
            android:layout_alignRight="@+id/textView19"
            android:layout_alignTop="@+id/imageView5"
            app:srcCompat="@drawable/ic_star"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="13dp"
            android:text="Telepon"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView20"
            android:layout_alignBottom="@+id/textView20"
            android:layout_centerHorizontal="true"
            android:text="Tambah Foto"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView21"
            android:layout_alignBottom="@+id/textView21"
            android:layout_alignEnd="@+id/imageView7"
            android:layout_alignRight="@+id/imageView7"
            android:text="Arsipkan"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar2"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/ratingBar2"
            android:layout_toStartOf="@+id/ratingBar2"
            android:text="Foto" />

        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/konten"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/textView23"
            android:layout_alignStart="@+id/textView23"
            android:layout_below="@+id/textView23"
            app:srcCompat="@drawable/makanan" />

        <ImageView
            android:id="@+id/konten2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_below="@+id/textView23"
            android:layout_toEndOf="@+id/textView20"
            android:layout_toRightOf="@+id/textView20"
            app:srcCompat="@drawable/makanan" />

        <ImageView
            android:id="@+id/konten3"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_below="@+id/textView23"
            android:layout_toEndOf="@+id/textView17"
            android:layout_toRightOf="@+id/textView17"
            app:srcCompat="@drawable/makanan" />


        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/konten"
            android:layout_alignStart="@+id/konten"
            android:layout_below="@+id/konten"
            android:layout_marginTop="19dp"
            android:text="Menu" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/tv_menu"
            android:layout_alignStart="@+id/tv_menu"
            android:layout_below="@+id/tv_menu"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/makanan" />

        <ImageView
            android:id="@+id/menu1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/menu"
            android:layout_toEndOf="@+id/textView20"
            android:layout_toRightOf="@+id/textView20"
            app:srcCompat="@drawable/makanan" />

        <ImageView
            android:id="@+id/menu2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/konten3"
            android:layout_alignStart="@+id/konten3"
            android:layout_alignTop="@+id/menu1"
            app:srcCompat="@drawable/makanan" />

        <TextView
            android:id="@+id/lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/konten"
            android:layout_alignStart="@+id/konten"
            android:layout_below="@+id/menu"
            android:layout_marginTop="19dp"
            android:text="Lokasi" />

        <TextView
            android:id="@+id/telepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/konten"
            android:layout_alignStart="@+id/konten"
            android:layout_below="@+id/mapView"
            android:layout_marginTop="19dp"
            android:text="Telepon" />

        <TextView
            android:id="@+id/noTelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/telepon"
            android:layout_alignStart="@+id/telepon"
            android:layout_below="@+id/telepon"
            android:text="081256738898" />

        <TextView
            android:id="@+id/jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/konten"
            android:layout_alignStart="@+id/konten"
            android:layout_below="@+id/noTelepon"
            android:layout_marginTop="19dp"
            android:text="Jenis" />

        <TextView
            android:id="@+id/makananberat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/telepon"
            android:layout_alignStart="@+id/telepon"
            android:layout_below="@+id/jenis"
            android:text="Makanan Berat" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/konten"
            android:layout_alignStart="@+id/konten"
            android:layout_below="@+id/makananberat"
            android:layout_marginTop="19dp"
            android:text="Harga" />

        <TextView
            android:id="@+id/sepuluhribu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/telepon"
            android:layout_alignStart="@+id/telepon"
            android:layout_below="@+id/harga"
            android:text="10.000 - 20.000" />

        <TextView
            android:id="@+id/informasitambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/noTelepon"
            android:layout_alignEnd="@+id/mapView"
            android:layout_alignRight="@+id/mapView"
            android:text="Informasi Tambahan" />

        <TextView
            android:id="@+id/aksesmudah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/informasitambahan"
            android:layout_alignStart="@+id/informasitambahan"
            android:layout_below="@+id/informasitambahan"
            android:text="Akses Mudah" />
        <TextView
            android:id="@+id/hanyatunai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/informasitambahan"
            android:layout_alignStart="@+id/informasitambahan"
            android:layout_below="@+id/aksesmudah"
            android:text="Hanya Tunai" />
        <TextView
            android:id="@+id/nondelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/informasitambahan"
            android:layout_alignStart="@+id/informasitambahan"
            android:layout_below="@+id/hanyatunai"
            android:text="Non Delivery" />

        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/informasitambahan"
            android:layout_alignStart="@+id/informasitambahan"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/nondelivery"
            android:text="Alamat" />
        <TextView
            android:id="@+id/jalan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/informasitambahan"
            android:layout_alignStart="@+id/informasitambahan"
            android:layout_below="@+id/alamat"
            android:text="Jl. Telekomunikasi 148-425" />



        <include
            layout="@layout/include_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jalan"
            />
    </RelativeLayout>





</ScrollView>

