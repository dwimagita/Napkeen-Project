<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9052"
        app:titleMarginStart="20dp">

    </android.support.v7.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/ubahpasswordcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#FFEAC6"

        android:layout_marginBottom="5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:text="Ubah Password"
            android:textSize="30dp"


            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_kanan"
             />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ubahemailcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ubahpasswordcardview"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="70dp"
        android:layout_marginBottom="5dp"
        android:background="#FFEAC6"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:text="Ubah Email"
            android:textSize="30dp"

            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_kanan" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/hapusakuncarview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ubahemailcardview"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="140dp"
        android:background="#FFEAC6"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:text="Hapus Akun"
            android:textSize="30dp"

            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_kanan" />
    </android.support.v7.widget.CardView>

</LinearLayout>
</LinearLayout>