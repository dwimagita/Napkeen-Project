<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#FFEAC6"

    tools:context=".Pengaturan">


    <android.support.v7.widget.CardView
        android:id="@+id/ubahpasswordcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:text="Ubah Password"
            android:textSize="30dp"

            />

        <ImageView
            android:id="@+id/right"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_kanan" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ubahemailcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ubahpasswordcardview"
        tools:layout_editor_absoluteX="0dp"

        tools:layout_editor_absoluteY="70dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:text="Ubah Email"
            android:textSize="30dp"

            />

        <ImageView
            android:id="@+id/right"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_kanan" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/hapusakuncarview"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ubahemailcardview"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="140dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:text="Hapus Akun"
            android:textSize="30dp"

            />

        <ImageView
            android:id="@+id/right"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_kanan" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>